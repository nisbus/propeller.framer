<UserControl x:Class="nisbus.Propeller.Demo.Controls.PortLister"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Available devices" Name="lblDevices" Height="26"/>
            <ListBox Name="lstBxDevices" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" SelectedValue="{Binding SelectedDevice}" ItemsSource="{Binding DeviceList}" ToolTip="Select device to open"/>
        </StackPanel>
    </Grid>
</UserControl>
